<%= form_with url: "/brews/#{@brew.id}", method: :patch, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.label :abv %>
  <%= form.text_field :abv %>
  <%= form.label :beer_type %>
  <%= form.text_field :beer_type %>
  <%= form.label :gluten_free %>
  <%= form.check_box :gluten_free %>
  <%= form.label :on_tap %>
  <%= form.check_box :on_tap %>

  <%= form.submit "Update Brew" %>
<% end %>
