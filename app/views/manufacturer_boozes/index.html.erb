<h1>List of Liquor's Created By: <%= @manufacturer.name %></h1>

<%= link_to "Create Booze", "/manufacturers/#{@manufacturer.id}/boozes/new" %>
<%= link_to "Sort Booze Alphabetically", "/manufacturers/#{@manufacturer.id}/boozes?sort_by=name" %>

<p><%= form_with url: "/manufacturers/#{@manufacturer.id}/boozes", method: :get, local: true do |form| %>
  <%= form.label :abv_threshold %>
  <%= form.number_field :abv_threshold, in: 0..100, step: 0.1 %>

  <%= form.submit "Filter booze by ABV threshold" %>
<% end %></p>

<% @boozes.each do |booze| %>
  <h3><%= booze.name %></h3>
  <p>ABV: <%= booze.abv %></p>
  <p>Proof: <%= booze.proof %></p>
  <p>Type: <%= booze.booze_type %></p>
  <p>Clear? <%= booze.clear %></p>
<% end %>
